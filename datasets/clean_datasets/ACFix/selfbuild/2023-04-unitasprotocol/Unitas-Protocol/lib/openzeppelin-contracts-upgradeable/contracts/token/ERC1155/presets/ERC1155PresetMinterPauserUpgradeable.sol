        __ERC1155_init_unchained(uri);
        __Pausable_init_unchained();
        __ERC1155PresetMinterPauser_init_unchained(uri);
    }
    function __ERC1155PresetMinterPauser_init_unchained(string memory) internal onlyInitializing {
